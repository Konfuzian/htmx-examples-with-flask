<form id='form' hx-encoding='multipart/form-data' hx-post='/file_upload/upload'>
    <input type='file' name='file'>
    <button>
        Upload
    </button>
    <progress id='progress_htmx' value='0' max='100'></progress>
</form>
<script>
    htmx.on('#form', 'htmx:xhr:progress', function (evt) {
        htmx.find('#progress_htmx').setAttribute('value', evt.detail.loaded / evt.detail.total * 100)
    });
</script>